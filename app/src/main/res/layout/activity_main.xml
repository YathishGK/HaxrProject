<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Location"
        android:id="@+id/idSetLocation"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="45dp"
        android:onClick="setLocation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Distance"
        android:id="@+id/idGetDistance"
        android:layout_below="@+id/idSetLocation"
        android:layout_alignLeft="@+id/idSetLocation"
        android:layout_alignStart="@+id/idSetLocation"
        android:layout_marginTop="60dp"
        android:onClick="getLocationDistance"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Timer"
        android:id="@+id/idStartTimer"
        android:layout_below="@+id/idGetDistance"
        android:layout_alignLeft="@+id/idGetDistance"
        android:layout_alignStart="@+id/idGetDistance"
        android:layout_marginTop="64dp"
        android:onClick="startTimer"/>

</RelativeLayout>
